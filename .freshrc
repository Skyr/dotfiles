fresh freshshell/fresh bin/fresh --bin

fresh ctags --file
fresh 'bin/*' --bin
fresh 'xresources/*' --file=~/.Xresources

if command -v git >/dev/null ; then
  fresh 'git/*' --file=~/.gitconfig
  VERSION=`git --version | sed "s/^.* //"`
  V=(${VERSION//./ })
  fresh git-${V[0]}.${V[1]} --file=~/.gitconfig --ignore-missing
fi

for F in $FRESH_LOCAL/gnupg/* ; do
  N=`basename $F`
  fresh gnupg/$N --file=~/.gnupg/$N
done

for F in $FRESH_LOCAL/sbt/* ; do
  VER=`basename $F`
  fresh sbt/$VER/plugins.sbt --file=~/.sbt/$VER/plugins/plugins.sbt --ignore-missing
  fresh sbt/$VER/user.sbt --file=~/.sbt/$VER/user.sbt --ignore-missing
done

fresh gtkrc-2.0 --file
fresh gtk-3.0-settings.ini --file=~/.config/gtk-3.0/settings.ini

if command -v i3 > /dev/null ; then
  fresh i3config --file=~/.i3/config
  fresh i3status --file=~/.i3/i3status.conf
fi


if command -v awesome > /dev/null ; then
  fresh awesome --file=~/.config/awesome/
fi

for fontname in DejaVuSansMono DroidSansMono SourceCodePro Terminus ; do
  fresh Lokaltog/powerline-fonts $fontname --file=~/.fonts/$fontname/
done
fresh Lokaltog/powerline font/PowerlineSymbols.otf --file=~/.fonts/PowerlineSymbols.otf
fresh Lokaltog/powerline font/10-powerline-symbols.conf --file=~/.config/fontconfig/conf.d/10-powerline-symbols.conf
# Latest version: git tag -l | grep "^[0-9]" | sort -n | tail -n 1

if command -v urxvt > /dev/null ; then
  fresh muennich/urxvt-perls clipboard --file=~/.urxvt/ext/clipboard
fi

fresh tmux.conf --file=~/.tmux.conf
fresh Lokaltog/powerline powerline/bindings/tmux/powerline.conf --file=~/.tmux.conf

fresh powerline --file=~/.config/powerline/

fresh 'vim/*' --file=~/.vimrc
if vim --version | grep +python > /dev/null ; then
  fresh vim-python --file=~/.vimrc
else
  fresh vim-nopython --file=~/.vimrc
fi
fresh mpollmeier/vim-scalaConceal after/syntax/scala.vim --file=~/.vim/after/syntax/scala.vim

fresh 'zsh/oh-my-zsh' --file=~/.zshrc
fresh robbyrussell/oh-my-zsh oh-my-zsh.sh --file=~/.zshrc
fresh simonwhitaker/gitignore-boilerplates gibo-completion.zsh --file=~/.zshrc
fresh 'zsh/[0-9]*' --file=~/.zshrc
fresh zsh/powerline-pre --file=~/.zshrc
fresh Lokaltog/powerline powerline/bindings/zsh/powerline.zsh --file=~/.zshrc
fresh zsh/powerline-post --file=~/.zshrc

fresh simonwhitaker/gitignore-boilerplates gibo --bin=~/bin/gibo
fresh clvv/fasd fasd --bin=~/bin/fasd
fresh pasky/speedread speedread --bin=~/bin/speedread

fresh_after_build() {
  cd $FRESH_PATH/source/Lokaltog/powerline
  python setup.py install --user >/dev/null
  ln -sf $HOME/.local/bin/powerline* $HOME/bin/

  if ! [[ -f $HOME/.tmux.conf.local ]] ; then
    touch $HOME/.tmux.conf.local
  fi
}

